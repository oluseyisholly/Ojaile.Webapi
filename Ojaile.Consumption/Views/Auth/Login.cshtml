@model LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h2>@TempData["LoginSucess"]</h2>

    <form class="horizontal-form" asp-action="Login">
     <div class="form-group">
       <label>Username</label>
     <input type="text" required asp-for="UserName" class="form-control"/>
      <span asp-validation-for="UserName"></span>
     </div>

     <div class="form-group">
       <label>Password</label>
     <input type="password" required asp-for="Password" class="form-control"/>
      <span asp-validation-for="Password"></span>
     </div>
     <hr/>
     <div class="form-group">
     <input type = "submit" value = "Login"/></div>
     </form>
     <h1>@TempData["token"] </h1>
}

<!-- partial:index.partial.html -->
<div id="login-form-wrap">
  <h2>Login</h2>
  <form id="login-form">
    <p>
    <input type="text" id="username" name="username" placeholder="Username" required><i class="validation"><span></span><span></span></i>
    </p>
    <p>
    <input type="email" id="email" name="email" placeholder="Email Address" required><i class="validation"><span></span><span></span></i>
    </p>
    <p>
    <input type="submit" id="login" value="Login">
    </p>
  </form>
  <div id="create-account-wrap">
    <p>Not a member? <a href="#">Create Account</a><p>
  </div><!--create-account-wrap-->
</div><!--login-form-wrap-->
