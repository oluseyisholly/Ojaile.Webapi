@{
    <h2>@ViewData["RegisteredName"]  </h2>
    <div class="row col-12">
    <div class="col-6">
    
    </div>
     <div class="col-6">
     <form class="horizontal-form" asp-action="EditPropertyItem">

    <div class="form-group">
    <label>Property Name</label>
    <input type="text" required asp-for="PropertyName" class="form-control"/>
    <span asp-validation-for="PropertyName"></span>
    </div>
     <div class="form-group">
       <label>Description</label>
     <input type="text" required asp-for="PropertyDecription"  class="form-control"/>
      <span asp-validation-for="PropertyDecription"></span>
     </div>
     <div class="form-group">
       <label>Address</label>
     <input type="text" required asp-for="Address" class="form-control"/>
      <span asp-validation-for="Address"></span>
     </div>

      <div class="form-group">
      <label>Address</label>
     <select type="text" required asp-for="PropertyTypeId" asp-items = "ViewBag.PropertyType" class="form-control"></select>
      <span asp-validation-for="Address"></span>
     </div>
    
     <hr/>
     <div class="form-group">
     <input type="submit" value="Add Property"/></div>
     </form>

    </div></div>
}

