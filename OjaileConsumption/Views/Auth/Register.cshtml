@model  AuthModelComponents

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h2>@ViewData["RegisteredName"]  </h2>
    <div class="row col-12">
    <div class="col-6">
    <table>
    <thead>
    <th>Fullname</th>
    <th>Email</th>
    <th>Phone</th> 
   
    </thead>


    <tbody>
     @foreach(var itm in Model.register)
                {
                   <tr>
                   <td>@itm.FirstName  @itm.LastName</td>
                   <td>@itm.Email</td>
                    <td>@itm.phoneNumber</td>
                     
                   </tr>
                }

    </tbody>


    <tfoot></tfoot>
    </table>
    </div>
     <div class="col-6">
 <form class="horizontal-form" asp-action="post">
     
    <div class="form-group">
    <label>First Name</label>
    <input type="text" required asp-for="user.FirstName" class="form-control"/>
    <span asp-validation-for="user.FirstName"></span>
    </div>
     <div class="form-group">
       <label>Last Name</label>
     <input type="text" required asp-for="user.LastName" class="form-control"/>
      <span asp-validation-for="user.LastName"></span>
     </div>
     <div class="form-group">
       <label>Username</label>
     <input type="text" required asp-for="user.UserName" class="form-control"/>
      <span asp-validation-for="user.UserName"></span>
     </div>
      <div class="form-group">
       <label>Email</label>
     <input type="email" required asp-for="user.Email" class="form-control"/>
      <span asp-validation-for="user.Email"></span>
     </div>
      <div class="form-group">
       <label>Phone Number</label>
     <input type="text" required asp-for="user.phoneNumber" class="form-control"/>
      <span asp-validation-for="user.phoneNumber"></span>
     </div>
      <div class="form-group">
       <label>Password</label>
     <input type="password" required asp-for="user.Password" class="form-control"/>
      <span asp-validation-for="user.Password"></span>
     </div>
     <hr />
      <div class="form-group">
     <input type="submit" value="Submit Data"/></div>
    </form>

    </div></div>
}